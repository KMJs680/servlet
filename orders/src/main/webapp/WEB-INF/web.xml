<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>xmlmapping</servlet-name> <!-- servlet의 이름은 mapping 등록되어야 함-->
        <servlet-class>com.example.xml.order.xmlOrder</servlet-class>
        <!-- 클래스 루트를 설정한다 -->
    </servlet>
    <servlet-mapping>
        <!-- url 요청시 응답할 servlet을 설정 -->
        <servlet-name>xmlmapping</servlet-name>
        <!-- 아래 요청에 따라 실행됨 -->
        <url-pattern>/xml-lifecycle</url-pattern>
    </servlet-mapping>
</web-app>